    <script type="text/javascript">
        hljs.initHighlightingOnLoad();
        var item1;
        var item2;
        var item3;
        var item4;
        $(document)
            .ready(function() {
                item1 = $('#Test1')
                    .datapicker("people",
                        {
                            para: { "method": "all" }
                        }
                    );
                item2 = $('#Test2')
                    .datapicker("people",
                        {
                            maxCount:2,
                            para: { "method": "all" }
                        }
                    );
                item3 = $('#Test3')
                    .datapicker("people",
                        {
                            autocomplete: {
                                enable: true,
                                autoFill: true,
                                limit: 5,
                                inputbox: { minwidth: 200, maxwidth: 800 }
                            },
                            searchDialog:{inputText:"Search staff name or staff email"},
                            para: { "method": "all" }
                        }
                    );
                item4 = $('#Test4')
                    .datapicker("people",
                        {
                            para: { "method": "all" }
                        }
                    );
            });

        function getValue() {
            var v = item4.getValue();
            alert(JSON.stringify(v));
        }

        function setValue() {
            item4.setValue('@@CN All,10036');
        }

        function changeValue(values) {
            item4.changeValue('@@HK All,10373,13089');
        }

        function changeStatus(s) {
            item4.setReadOnly(s);
        }
    </script>
